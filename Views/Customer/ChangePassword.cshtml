@model ChangePassword 
@{
    ViewData["Title"] = "ChangePassword";
}
<form asp-action="ChangePassword" method="post">

    <label asp-for="Password"></label>
    <input type="password" asp-for="Password" class="form-control">
    @if (ViewBag.wrongCurrentPass != null)
    {
        <span class="text-danger">@ViewBag.wrongCurrentPass</span>
    }
    <br>
    <label asp-for="NewPassword"></label>
    <input type="password" asp-for="NewPassword" class="form-control">
    <span asp-validation-for="NewPassword" class="text-danger"></span>
    <br>
    <label asp-for="ConfirmNewPassword"></label>
    <input type="password" asp-for="ConfirmNewPassword" class="form-control">
    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    <br>
    
    <input type="submit" value="Update" class="btn btn-primary">
    <a asp-action="Index" class="btn btn-danger">Back</a>
</form>
